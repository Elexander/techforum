 <% @comment.each do |comment| %> 

          <div class="row">
            <div class="col s7">

              <div class="card-panel grey lighten-5 z-depth-1 hoverable">


                <div class="row valign-wrapper">

                  <div class="col s2">
                    <%= image_tag comment.user.image.url(:large) ,class:"circle responsive-img" %>
                  </div>

                  <div class="col s10">
                    <span class="black-text">
                      <strong><%= comment.user.name %></strong><br/>
                      
                      <%= comment.id %>
                      <%= comment.content %></br>
                      <%= comment.user.email %>
                    </span>
                    <br/>
                      <button id="refresh" name="comment" onClick="x()" value="<%= comment.id %>">Like <%= comment.votes_for %></button>
                    <span class="gray-text right thin" ><%= comment.created_at.strftime("%m/%d/%Y") %></span>
                  </div>
                </div>

              </div>
            </div>
          </div>
        <% end %>