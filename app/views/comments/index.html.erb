
<div class="mdl-layout__content">
<!-- Main post -->
  
  <!-- Page Layout here -->
    <div class="row"> 

      <div class="col s9 offset-s1">
        
        <div class="card small">
          <div class="card-image">
            <img src="http://www.ricoh-imaging.co.jp/english/r_dc/caplio/r7/img/sample_04.jpg">
            <span class="card-title"><%= @post.title %></span>
          </div>
          
          <div class="card-content">
            <p><%= @post.content %></p>
          </div>
              
          <div class="card-action">
            <a href="#"><%= @post.user.email %></a>
            <a href="#"><%= @post.post_type %></a>
          </div>
        </div>

      </div>  

      <div class="col s3">
        <!-- Lateral panel -->

      </div>

      <div class="row">

        <div class="col s12 offset-s3">
        <!-- Card page content  -->

        <% @comment.each do |comment| %> 
          <div class="row">
            <div class="col s7">
              <div class="card-panel grey lighten-5 z-depth-1 hoverable">


                <div class="row valign-wrapper">

                  <div class="col s2">
                    <%= image_tag comment.user.image.url(:large) ,class:"circle responsive-img" %>
                  </div>

                  <div class="col s10">
                    <span class="black-text">
                      <strong><%= comment.user.email %></strong><br/>
                      <%= comment.content %>
                    </span>
                    <br/>
                    <span class="gray-text right thin" ><%= comment.created_at %></span>
                  </div>
                </div>

              </div>
            </div>
          </div>
 
        <% end %>

        </div>

        <div class="col offset-s10">
          <div class="toc-wrapper pinned" style="bottom: 100px;">
              <!-- Modal Trigger -->
             <a class="btn-floating btn-large waves-effect waves-light red modal-trigger" href="#modal1"><i class="material-icons">forum</i></a>
          </div>
        </div> 

      </div>  

    </div>


    <!-- Modal Content -->
    <div id="modal1" class="modal bottom-sheet">
      <%= form_for :comments, url: comments_path do |f| %>
        <div class="modal-content">          
          <div class="input-field ">
              
            <%= f.text_area :content, class:"materialize-textarea",placeholder:"Comment", type:"text", rows:"1" %>
            <%= f.hidden_field :post_id, value: @post.id  %>
            <%= f.hidden_field :user_id, value: @user %>
               
          </div>
        </div>
        <div class="modal-footer">  
          <%= f.submit class:" modal-action modal-close btn" %>
        </div>
      <% end %> 
    </div>
                       
</div>


<script type="text/javascript">
  $(document).ready(function(){
    
    $('.modal-trigger').leanModal();
  });   
</script>    
  



