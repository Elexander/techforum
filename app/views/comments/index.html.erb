<h2>Comments</h2>
<% @comment.each do |comment| %> 
  <p>
    <strong>Comment:</strong>
    <%= comment.content %>
  </p>
<% end %>
 
<h2>Add a comment:</h2>
<%= form_for :comments, url: comments_path do |f| %>

  <p>
    <%= f.label "Comentario:" %><br>
    <%= f.text_area :content %>
    <%= f.hidden_field :post_id, value: @post.id  %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
