<div class="row">
  <div class="col s12 m9 l10">


<div class="">
<!-- Main post -->
  <input type="hidden" id="reload" value="<%= request.original_url%>">
  <!-- Page Layout here -->
    <div class="row"> 

      
        <div class="col hide-on-small-only m3 l2">
          <div class="tabs-wrapper pinned" style="top: 100px;">
            <%= render partial: 'posts/menusidebar' %>
          </div>
        </div>
      <div class="col s9 offset-s3">
        
        <div class="card small">
          <div class="card-image">
            <img src="http://www.ricoh-imaging.co.jp/english/r_dc/caplio/r7/img/sample_04.jpg">
            <span class="card-title black-text"><%= @post.title %></span>
          </div>
          
          <div class="card-content">
            <p><%= @post.content %></p>
          </div>
              
          <div class="card-action card-a">
            <%= @post.user.email   %>  |
            <%= @post.post_type %> |
            <a class="btn-floating btn-medium waves-effect grey modal-trigger btnedit" href="#modal1"><i class="material-icons">comment</i>
             </a>
          </div>

        </div>

      </div>  

      <div class="col s3">
        <!-- Lateral panel -->

      </div>

      <div  class="row">

        <div class="col s12 offset-s3">
        <!-- Card page content  -->

        MOST VOTED COMMENT

        <% @most_voted.each do |comment| %>
        <%if @post.user.id == comment.user.id%>
          <div class="row">
            <div class="col s7">

              <div class="card-panel  white z-depth-1 hoverable">


                <div class="row valign-wrapper">

                  <div class="col s2">
                    <%= image_tag comment.user.image.url(:large) ,class:"circle responsive-img" %>
                  </div>

                  <div class="col s10">
                    <span class="black-text">
                      <strong><%= comment.user.name %></strong><br/>
                      <%= comment.content %></br>
                      <%= comment.user.email %>
                    </span>
                    <br/>

                    <% if current_user.id == comment.user.id %>
                      <span class="gray-text right thin" >
                      <%='<i class="material-icons grey-text">done</i>'.html_safe%>

                    <% else %>
                      <span class="gray-text right thin" >
                      <% if current_user.voted_on?(comment) %>
                      <%= link_to '<i class="material-icons green-text">done</i>'.html_safe,{:controller => "comments", :action => "vote", :comment_id => comment.id},:method => 'post' %>
                      <% else %>
                      <%= link_to '<i class="material-icons black-text">done</i>'.html_safe,{:controller => "comments", :action => "vote", :comment_id => comment.id},:method => 'post' %>
                      <% end %>
                    <%end%>
                        <%= comment.votes_for %> </br>
                        
                    <%= comment.created_at.strftime("%m/%d/%Y") %></span>
                  </div>
                </div>

              </div>
            </div>
          </div>
          <%else%>
            <div class="row">
            <div class="col s7  offset-s2">

              <div class="card-panel white lighten-5 z-depth-1 hoverable">


