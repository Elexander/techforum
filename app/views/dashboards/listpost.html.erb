                  		<div class="col s10">
                    		<span class="black-text">
                    			<%= link_to post.title , {:action=>"index", :controller=>"comments", :post_id => post.id} %><br/>
                      			<%= post.content %><br/>
                      			<strong><%= post.user.name %></strong><br/>
                    		</span>
                    		<br/>
                    		<span class="gray-text right thin" ><%= post.created_at.strftime("%m/%d/%Y")%></span>
                  		</div>
                	</div>
                </div>	
		      			 
			<% end %>
     </div>

     <div class="col s4">
    	<h3 align="center">Discussions</h3>    
    		<% @discussion_posts.each do |post| %>
				<div class="card-panel grey lighten-5 z-depth-1 hoverable"> 
					<div class="row valign-wrapper">

                  		<div class="col s2">
                    		<%= image_tag post.user.image.url(:large) ,class:"circle responsive-img" %>
                  		</div>

                  		<div class="col s10">
                    		<span class="black-text">
                    			<%= link_to post.title , {:action=>"index", :controller=>"comments", :post_id => post.id} %>
                      			<br/>
                      			<%= post.content %><br/>
                      			<strong><%= post.user.name %></strong>
                    		</span>
                    		<br/>
                    		<span class="gray-text right thin" ><%= post.created_at.strftime("%m/%d/%Y") %></span>
                  		</div>
                	</div>
                </div>	
		      			 
			<% end %>
     </div>
</div>					
</div>	
