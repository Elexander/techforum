<main class="mdl-layout__content">
	<div id="overview" class="mdl-layout__tab-panel is-active">
			<h1>Dasboard</h1>
		
			<div><a href="posts/new">New thread</a> </div>
		<section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
			<div class="mdl-card mdl-cell mdl-cell--12-col">
			<div class="mdl-card__supporting-text"> <% @post.each do |post| %>
		      <h5> <%= link_to post.title , {:action=>"index", :controller=>"comments", :post_id => post.id} %></h5>
		      <p><%= post.user.email %>
		    </div>
		      <% end %>
		    <div class="mdl-card__actions">
	      	<a class="mdl-button" href="#"> Read more</a>
	        </div>
	      </div>
	    
	      <button id="btn3" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" data-upgraded=",MaterialButton,MaterialRipple">
	      	<i class="material-icons">more_vert</i>
	      	<span class="mdl-button__ripple-container">
	      		<span class="mdl-ripple"></span>
	      	</span>
	      </button>
	      <div class="mdl-menu__container is-upgraded">
	      	<div class="mdl-menu__outline mdl-menu--bottom-right"></div>
	      </div>
	  </section>
	</div>
	<div class="demo-card-wide mdl-card mdl-shadow--2dp">
		<div class="mdl-card__title">
			<h2 class="mdl-card__supporting-text">categoría</h2>
		</div>
		<div class="mdl-card__supporting-text">UN MONTÓN DE TEXTO
		</div>
		<div class="mdl-card__actions mdl-card--border">
			<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Compartir</a>
		</div>
		<div class="mdl-card__menu">
			<button class="mdl-button mdl-button--icon mdl-jsbutton mdl-js-ripple-effect">
				<i class="material-icons">share</i>
			</button>
		</div>
	</div>
</main>

