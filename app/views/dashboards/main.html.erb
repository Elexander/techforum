		<h5 class="grey lighten-4 grey-text text-darken-1">web and mobile</h5>
	</div>
	<div id="overview" class="">
		<h1>Dashboard</h1>
		
		<!-- <aside><div class="mdl-card mdl-cell mdl-cell--2-col mdl-shadow--2dp"></div></aside> -->
		<div class="row">

				<div class="">
					<div >
						<a href="posts/new"> New thread</a> 
					</div>
					
					<h3>Today</h3>
					<!-- <section > -->
					<% @today_posts.each do |post| %>
						<div id="mdl-post" class="">
							<div class=""> 
		      					<h5 class=""> 
		      						<%= link_to post.title , {:action=>"index", :controller=>"comments", :post_id => post.id} %> 
		      					</h5>
		      				</div class=""> 
		      				<p><%= post.content %></p>
		      				<div>
		      					<label> 
		      						<%= post.user.email %> 
		      					</label>
		    				</div>
		    				<div class="">
	      						<a class="" href="#"> Read more</a>
	        				</div>
	        				<div class=""> 
		      					<button class="btn">
		      						<i class="material-icons">share</i>
		      					</button>
	      					</div>
	      				</div>	      
			   		<% end %>
