<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div align="center">
  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :name, class:"mdl-textfield__label", for:"firstName"%>
    <%= f.text_field :name , class:"mdl-textfield__input", type:"text", id:"firstName", autofocus: true%>
  </div>
  <br>
  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :last_name, class:"mdl-textfield__label", for:"lastName" %>
    <%= f.text_field :last_name, class:"mdl-textfield__input", type:"text", id:"lastName" %>
  </div>
  <br>
  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :email, class:"mdl-textfield__label", for:"theMail" %>
    <%= f.email_field :email, class:"mdl-textfield__input", type:"text", id:"theMail" %>
  </div>  
  <br>
  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :password, class:"mdl-textfield__label", for:"passwd" %>
    <% if @minimum_password_length %>
    <em style="display: none;">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class:"mdl-textfield__input", type:"password", id:"passwd", pattern:"^.{8,72}$" %>
    <span class="mdl-textfield_error">8 Characters Minimum</span>
  </div>
  <br>
  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :password_confirmation, class:"mdl-textfield__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"mdl-textfield__input", type:"password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  </div>
<% end %>

