<div class="row">


<%= form_for(resource, as: resource_name, class: "col s12 l12", name: "new_user",url: registration_path(resource_name)) do |f| %>

  
  <div class="row">
    <div class="col l6 s12  offset-l3">
      <h2>Sign up</h2>
      <strong><%= devise_error_messages! %></strong>
      <div class=" col offset-s1 offset-l1">
            <strong><%= flash[:alert] %></strong> 
        </div><br>

      <div id="new_usr" class="card first-input">
      </br>
        <div class="col s12 center l4 offset-l4">
          <%= link_to image_tag('/sign-in-with-facebook.png'), user_omniauth_authorize_path(:facebook) %>
        </div>  
        
        <div class="col s6 offset-s3 l6 offset-l3">
          <hr>
        </div>  

        <div class="input-field col s10 offset-s1 l10 offset-l1">
          <i class="material-icons prefix">account_circle</i>
          <%= f.text_field :name , class:"validate", type:"text", id:"firstName", autofocus: false, required: true, placeholder: "Name"%>
          <!--<%= f.label :name, for:"firstName", class:"active" %> -->
          
        </div>

        <div class="input-field col s10 offset-s1 l10 offset-l1">
          <i class="material-icons prefix">account_circle</i>
          
          <%= f.text_field :last_name, class:"validate", type:"text", id:"lastName",required: true, placeholder: "Last Name" %>
        </div>
        
        <div class="input-field col s10 offset-s1 l10 offset-l1">
          <i class="material-icons prefix">email</i>
          <!--<%= f.label :email, class:"", for:"theMail" %> -->
          <%= f.email_field :email, class:"validate", type:"email", id:"theMail", required: true, placeholder: "Email" %>
          
        </div>  
        
        <div class="input-field col s10 offset-s1 l10 offset-l1">
          <i class="material-icons prefix">vpn_key</i>
          <%= f.password_field :password, id:"passwd", class:"validate", pattern:".{8,72}$", required: true, placeholder: "Password" %>
          <label for="passwd" data-error="8 caracteres mínimo" data-success="¡Excelente!"></label>   
        </div>


        <%= f.hidden_field :badge_id, value:"1" %>
        
        <div class="row"> 
          <div class="col s4 offset-s8 l4 offset-l8">
            <div class="">
              <button type="submit" class="btn btn-large" >Sign up</button>
            </div>
          </div>
        </div> 
      </div>
      </div>

    </div>
  </div>
<% end %>

