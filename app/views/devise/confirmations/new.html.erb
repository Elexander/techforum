<div class="container">
	<div class="row">

     	<div class="col s12 " align="center">
      		<h4>Resend confirmation instructions</h4>
		</div>

		<div class="col s6 offset-s3" align="center">

			<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  				<%= devise_error_messages! %>

  				<div class="field">

  					<label for="email">Email</label>
    				<%= f.email_field :email, autofocus: true, type:"text", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), id:"email", class:"validate" %> 
    				
  				</div>

  				<div class="actions">
    				<%= f.submit "Resend confirmation instructions", class:"btn" %>
  				</div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>	
    </div>         
</div>
