<div align="center">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :email, class:"mdl-textfield__label", for:"email" %>
    <%= f.email_field :email, class:"mdl-textfield__input", type:"text", id:"email", autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>