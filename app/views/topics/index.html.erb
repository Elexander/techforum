<div class="row">
		<div class="col s3 m3 l2">
			<%= render partial: 'posts/menusidebar' %>
		</div>

		<div class="col s12 l10 offset-l1">
			<div class="container div-mobile">
				<p class="linkfont" >
					<% @topic.each do |topic| %>
						<span class="spanspace">	
							<a href="/posts/index?topic_id=<%=topic.id%>">
								<%= topic.name %>		
							</a>
						</span>						
					<% end %>	
				</p>	
			</div>
		<div>	

		<div class="col s12">
			<center>			
			<div class="container div-desktop">
				<p class="linkfont" >
					<% @topic.each do |topic| %>
						<a href="/posts/index?topic_id=<%=topic.id%>">
							<%= topic.name %>		
						</a></br>					
					<% end %>	
				</p>	
			</div>
			<%= will_paginate @topic %>
		</center>
		</div>	
</div>	


