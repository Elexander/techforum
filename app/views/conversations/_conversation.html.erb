
  <div class="row">

    <div class="col s12 offset-s1">

      <div class="card-panel grey lighten-5 z-depth-1 hoverable">

        <div class="row valign-wrapper">

          <div class="col s4">
              <%= image_tag conversation.originator.image.url(:med),class:"circle img" %>
          </div>

          <div class="col s10">
              <span class="black-text">
                <font size = "4"><i><strong><%= conversation.originator.name %>:
                <%= conversation.subject %></strong><br/></i></font>
                <%= truncate conversation.messages.last.sender.name %>:
                <%= truncate conversation.messages.last.body, length: 145 %></br>
              </span>
              <br/>
              <span class="gray-text right thin" ><%=  conversation.messages.last.created_at.strftime("%m/%d/%Y") %></span>
              <span class=""><%= link_to "View Conversation", conversation_path(conversation)%></span>
          </div>
        </div>
      </div>  
    </div>  

  </div>  
 
 


