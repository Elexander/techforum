<div class="card-panel white col s10 offset-s1">
<div class="row">
  <div class="col s3">
    <%= "From: " %>
    <%= conversation.originator.name %>
    <div class="media-left">
      <a href="#">
        <!-- Insertar lo de imagen aqui -->
        <img class="media-object" src="http://placehold.it/64x64" alt="...">
      </a>
    </div>
  </div>
  <div class="col s6 offset-s1">
    <div align="left">
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">

            <small><b>Subject: </b> <%= conversation.subject %></small><br>
            <small><b>Date Created: </b><%=  conversation.messages.last.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
          </h4>
          <b>Content:</b>
          <%= truncate conversation.messages.last.body, length: 145 %>
          <br><br>
          <%= link_to "View Conversation", conversation_path(conversation)  %>
          <br><br>
        </div>
      </div>
    </div>
  </div>
</div>
</div>



