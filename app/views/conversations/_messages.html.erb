<% @receipts.each do |receipt| %>
  <% message = receipt.message %>

<div class="container">
  <div class="row">

    <div class="col s8 offset-s2">

      <div class="card-panel grey lighten-5 z-depth-1 hoverable">

        <div class="row valign-wrapper">

          <div class="col s4">
              <%= image_tag message.sender.image.url(:large),class:"circle responsive-img" %>
          </div>

          <div class="col s10">
              <span class="black-text">
                <strong><%= message.subject %></strong><br/>
                <%= message.body %></br>
                <%= message.sender.name %>
              </span>
              <br/>
              <span class="gray-text right thin" ><%=  message.created_at.strftime("%m/%d/%Y") %></span>
          </div>
        </div>
      </div>  
    </div>  

  </div>  
</div>  

<% end %>
