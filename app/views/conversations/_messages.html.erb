<div class="row">
  <div class="col m3 l2">
    <%= render partial: 'mailbox/menusidebar' %>
</div>
<div class="row">
  <div class="col s12">
      <%= render partial: 'mailbox/controlbarmobile' %>
  </div>  
</div>

<% @receipts.each do |receipt| %>
  <% message = receipt.message %>

<div class="container">
  <div class="row">

    <div class="col s12 l8 offset-l2">

      <div class="card-panel grey lighten-5 z-depth-1 hoverable">

        <div class="row valign-wrapper">

          <div class="col s4 l4">
              <%= image_tag message.sender.image.url(:large),class:"circle responsive-img" %>
          </div>

          <div class="col s10 l10">
              <span class="black-text">
                <strong><%= message.subject %></strong><br/>
                <%= message.body %></br>
                <%= message.sender.name %>
              </span>
              <br/>
              
          </div>
        </div>

        <div class="card-action">
          <span class="gray-text right thin" ><%=  message.created_at.strftime("%m/%d/%Y") %></span>
        </div>  
      </div>  
    </div>  

  </div>  
</div>  

<% end %>


