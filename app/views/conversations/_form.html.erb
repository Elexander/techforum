<center>
<%= form_for :conversation, url: :conversations do |f| %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :recipients, class:"mdl-textfield__label" %>
    <%= f.text_field :recipients, class:"mdl-textfield__input", type:"text", id:"recipients", autofocus: true%>
  </div>
  <br>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <%= f.label :subject, class:"mdl-textfield__label" %>
    <%= f.text_field :subject, class:"mdl-textfield__input", type:"text", id:"subject", autofocus: true%>
  </div>
  <br>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label "Type your message here", class:"mdl-textfield__label" %>
      <%= f.text_area :message, class:"mdl-textfield__input",type:"text", id:"message", autofocus: true%>
    </div>
<br>
    <%= f.submit "Send Message", class: "btn btn-success" %>

<% end %>

</center>


