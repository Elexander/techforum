<center>
<div class="row">
  <div class="spacer"></div>
  <div class="col-md-6 text-right">
    <% if conversation.is_trashed?(current_user) %>
        <%= link_to 'Untrash', untrash_conversation_path(conversation), class: 'btn btn-info', method: :post %>
    <% else %>
        <i class="material-icons">delete</i>
        <%= link_to 'Move to trash', trash_conversation_path(conversation), class: 'btn btn-danger', method: :post,
                    data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="spacer"></div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render partial: 'messages' %>
      </div>
      <div class="panel-footer">
        <!-- Reply Form -->
        <%= form_for :message, url: reply_conversation_path(conversation) do |f| %>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label "Reply Message", class:"mdl-textfield__label" %>
              <%= f.text_area :body, class:"mdl-textfield__input", type:"text", id:"subject", rows:"3", autofocus: true%>
            </div>
            <br>
            <%= f.submit "Reply",class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored"  %>
        <% end %>
        <br>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>

</div>
</center>
