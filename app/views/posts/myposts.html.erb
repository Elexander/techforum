<div class="">
  <div class="row">
    <div class="col m3 l2">
      <%= render partial: 'menusidebar'%> 
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12 l8 offset-l2">
      <h3> My posts</h3>
      <% @my_posts.each do |post| %>
      <div class="card-panel grey lighten-5 z-depth-1 hoverable">
        <div class="col s3 l2">
            <%= image_tag post.user.image.url(:small), class:"circle img-responsive" %>
        </div>
        <div class="col s9 l10 ">
          <div class="card-content">
            <span class="card-text"><%= post.title %>
            </span><br>
            <span class="black-text">
            <strong><%= post.user.name %></strong><br>
            <%= post.content%><br>
            <strong>Topic: <%= post.topic.name%><br></strong>
            </span>
          </div>
          <div class="card-action">
            <div align="right"><%= link_to 'Read more', { :action=>"index", :controller=>"comments", :post_id => post.id} %></div>
          </div>  
        </div>
      <% end %>
    </div>

    <center>
      <div class="col m3 l2 div-mobile">
        <br>
        <h5>TOP TOPICS</h5>
        <br>
        <a href="/topics">All</a>
        <br>
        <% @topic.each do |topic| %>
          <%=link_to topic.name, { :action=>"index", :controller=>"posts", :topic_id =>topic.id} %><br>
        <% end %>
      </div>
    </center>

  </div>
</div>          

<script type="text/javascript">
  $(document).ready(function(){
    $('.tabs-wrapper .row').pushpin({ top: $('.tabs-wrapper').offset().top });
  });
</script>

                 