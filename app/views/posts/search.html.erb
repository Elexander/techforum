<div class="row">
<div class="col s3 m3 l2">
    <%= render partial: 'menusidebar' %>
  </div>
  <div class="col s6 m6 l8 offset-l2">
<div class="row">
<div class="col s10 m12">
	<h3>Search Results</h3>
	<% if @search_result[0] != nil%>
	<% @search_result.each do |post| %>
	<div class="card-panel grey lighten-5 z-depth-1 hoverable">
              <div class="card-content">
                <div class="col s3 l2">
                  <%= image_tag post.user.image.url(:small), class:"circle img-responsive" %>
                </div>
                <div class="col s9 l10">
        
                  <span class="card-text">
                    <%= post.title %>
                  </span><br>
                  <span class="black-text">
                    <strong><%= post.user.name %></strong><br>
                    <%= post.content%><br>
                    <strong>Topic: <%= post.topic.name%><br></strong>
                    Type <%=post.post_type%>
                  </span>
                </div>
              </div>
              <div class="card-action">
                <%= link_to 'Read more', { :action=>"index", :controller=>"comments", :post_id => post.id} %>
              </div>  
            </div>
    <% end %>
    <%else%>
    
    <div class= "valign-wrapper"><h5 class="valign center">What you are searching can't be found in this Galaxy, try again later, or try to ask!</h5></div>
    <%end%>
</div>
</div>
</div>
</div>