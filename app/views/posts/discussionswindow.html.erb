<div class="row">
  <div class="col s3 m3 l2">
    <%= render partial: 'menusidebar' %>
  </div>
  <div class="col s6 m6 l8 offset-l2">
<div class="">
  <div class="row">
    <div class="col s10 m12">
      <h3>Discussion</h3>
      <% @discussion_posts.each do |post| %>
      <div class="card-panel grey lighten-5 z-depth-1 hoverable">
        <div class="card-content">
            <span class="card-text"><%= link_to post.title, { :action=>"index", :controller=>"comments", :post_id => post.id} %>
            </span><br>
            <span class="black-text">
              <strong>Topic: <%= post.topic.name%><br></strong>
            <%= post.content%><br>
            <strong><%= post.user.name %></strong>
          </span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>   
  </div>
  <center>
  <div class="col s3 m3 l2">
  <br>
  <h5>TOP TOPICS</h5>
  <br>
        <a href="/posts/discussionswindow">All</a>
        <br>
        <% @topic.each do |topic| %>
          <%=link_to topic.name, { :action=>"discussionswindow", :controller=>"posts", :topic_id =>topic.id} %><br>
        <% end %>
  </div>
  </center>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.tabs-wrapper .row').pushpin({ top: $('.tabs-wrapper').offset().top });
  });
</script>