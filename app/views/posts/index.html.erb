<center>
  <table width="600">
    <thead >
      <tr>
        <th>User</th>
        <th>Title</th>
        <!-- <th>Content</th> -->
      </tr>
    </thead>

    <tbody>
      <% @post.each do |post| %>
        <tr  align = "center">
          <td><%= post.user.email %></td>
          <td><%= link_to post.title , {:action=>"index", :controller=>"comments", :post_id => post.id} %></td>
          
          <!-- <td><%= post.content %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Create Post" , {:action=>"new", :controller=>"posts"} %>
</center>  